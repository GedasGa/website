<section id="login">
  <div class="container">
    <h2>Login</h2>
    <form class="login-form" method="post" action="/en/login" onsubmit="$('#execute_login').prop('disabled', true);">
      <ul>
        <li class="email">
          <input type="text" name="form[email]" maxlength="255" placeholder="E-mail address" class="email" id="form_email" />
        </li>
        <li>
          <input type="password" name="form[password]" maxlength="30" placeholder="Password" class="password" id="form_password" />
        </li>
        <li class="checkbox">
          <input type="checkbox" name="form[remember_id]" value="1" id="remember_email" checked="checked" />
          <label for="remember_email">Keep my account logged in</label>
        </li>
        <li>
          <button id="execute_login" type="submit" class="btn-blue">Login</button>
        </li>
      </ul>
      <input type="hidden" name="form[_csrf_token]" value="ff5c9f539c5da9eebf1f1343006cc5a8" id="form__csrf_token" />
    </form>

    <div class="bottom">
      <a href="/en/lost/password">Forgot password?</a>
    </div>
  </div>
</section>

